<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="css/main.css">
    <title>Add New Patient</title>
  </head>
  <!---->
  <body>
    <div class="add-patient">
        <div class="container">
            <div class="mb-4 row justify-content-center">
                <div class="col-sm-6">
                    <h2>Add A New Patient</h2>
                </div>

                <div class="col-sm-3">
                    <input class="btn btn-primary bill" type="button" value="Bill">
                </div>

                <div class="col-sm-3">
                    <input class="btn btn-primary home" type="button" value="Home">
                </div>
            </div>
            <!-- Edit All information of patient-->
            <form action="">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="name" class="text-center col-sm-5 col-form-label">Name</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="name">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Gender" class="text-center col-sm-5 col-form-label">Gender</label>
                            <div class="col-sm-7">
                                <select class="form-control" name="gender" id="Gender">
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="city" class="text-center col-sm-5 col-form-label">City</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="city">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="address" class="text-center col-sm-5 col-form-label">Address</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="address">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Country" class="text-center col-sm-5 col-form-label">Country</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="country">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="nationality" class="text-center col-sm-5 col-form-label">Nationality</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="nationality">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="normal-room" class="text-center col-sm-5 col-form-label">Normal Room Days</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="normal-room">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="intensive-care" class="text-center col-sm-5 col-form-label">Intensive Care Days</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="intensive-care">
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label for="id" class="text-center col-sm-5 col-form-label">ID</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="id">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="analyis-price" class="text-center col-sm-5 col-form-label">Price of Analysis</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="analyis-price">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="operations-price" class="text-center col-sm-5 col-form-label">Total Operations Price</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="operations-price">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="examinations-price" class="text-center col-sm-5 col-form-label">Doctors' Examination Price</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="examinations-price">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="medicines-price" class="text-center col-sm-5 col-form-label">Total Price of medicines</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="medicines-price">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="paid" class="text-center col-sm-5 col-form-label">Deposit 5000 L.E</label>
                            <div class="col-sm-2">
                                <input type="checkbox" class="" id="paid">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="insurance" class="text-center col-sm-5 col-form-label">Health Isurance</label>
                            <div class="col-sm-2">
                                <input type="checkbox" class="" id="insurance">
                            </div>
                        </div>

                        <div class="form-group row" style="margin-top:22px;">
                            <label for="after-deposit" class="text-center col-sm-5 col-form-label">Amount Paid After Deposit</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" id="after-deposit">
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="row">
                    <input class="ml-auto btn btn-primary add" type="submit" value="Add Patient">
                </div>
            </form>
            <!-- Edit All information of patient-->

        </div>
    </div>

